{
  "mcpServers": {
    "trello-mcp": {
      "command": "python",
      "args": ["-m", "uvicorn", "trello_mcp.mcp_server:app", "--host", "0.0.0.0", "--port", "8000"],
      "type": "stdio",
      "env": {
        "TRELLO_API_KEY": {
          "source": "user",
          "collection_method": "both",
          "env_var": "TRELLO_API_KEY"
        },
        "TRELLO_API_TOKEN": {
          "source": "user", 
          "collection_method": "both",
          "env_var": "TRELLO_API_TOKEN"
        },
        "BASE_PATH": {
          "source": "project",
          "collection_method": "none",
          "env_var": "BASE_PATH"
        }
      }
    }
  }
}
